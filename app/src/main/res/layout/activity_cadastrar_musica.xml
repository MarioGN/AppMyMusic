<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".CadastrarMusica">

    <TextView
        android:text="Gênenro Musical"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spn_genero"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_interprete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Intérprete"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/et_musica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Música"
        android:textSize="24sp"
        android:layout_marginTop="20dp"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ano"
        android:textSize="24sp"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:id="@+id/sk_ano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="0"/>

    <TextView
        android:id="@+id/tv_ano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textAlignment="viewEnd"
        android:text="1988"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duração"
        android:textSize="24sp"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:id="@+id/sk_duracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="0"/>

    <TextView
        android:id="@+id/tv_duracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="viewEnd"
        android:text="0"/>

    <Button
        android:id="@+id/btn_cadastrar_musica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cadastrar"
        android:layout_marginTop="20dp"/>


</LinearLayout>